{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "RedHat_64",
      "headless": false,
      "http_directory": "http",
      "iso_urls": [
        "iso/CentOS-6.9-x86_64-minimal.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "422af57b493b8af49d485885a730c5a1d955f803fac85aa51311c393168b9080",
      "ssh_username": "root",
      "ssh_password": "changeme123",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'builder'|sudo -S /sbin/halt -h -p",
      "vm_name": "packer-centos-6.9-x86_64",
      "vboxmanage": [
	[ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/puppet-install.sh"
    },

    {
      "type": "puppet-masterless",
      "module_paths": "./modules",
      "manifest_file": "./manifests/site.pp"
    }
  ]
}
